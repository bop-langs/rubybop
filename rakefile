task :default => :ruby
test_dir = ['add', 'sleep'] #TODO enable string tests, 'str/BOP_string', 'str/strsub', 'str/strsub2']
#TODO add back str/BOP_strcmp
task :ruby_setup do
  cd "ruby" do
    if (!File.exists?("Makefile")) then
      sh 'autoconf'
      sh './configure --disable-install-doc'
    end
  end
end
task :miniruby => [:bop, :ruby_setup] do
  cd "ruby" do
    sh 'rm -f miniruby'
    sh 'make miniruby'
  end
end
task :ruby => [:bop, :ruby_setup] do
  #build ruby
  cd "ruby" do
    sh 'make' #make can run in parrallel. Big improvement in compile time
  end
end

task :release => :ruby_setup do
  cd "bop" do
    sh 'make -B -j4 DEBUG=0'
  end
  cd 'ruby' do
    sh 'make clean'
    sh 'make -j4'
  end
end

task :smoke_test do
  cd 'ruby' do
    sh 'make check' if File.exists? 'Makefile'
  end
end

task :bop do
  #build bop
  cd "bop" do
    sh 'make'
  end
end

task :bop_debug do
  cd "bop" do
    sh 'make DEBUG=1'
  end
end
task :ruby_test_run do

  ENV["BOP_Verbose"]=0.to_s
  cd "ruby" do
    ok = system 'echo \'Rubybop terminal io\' | ./miniruby -e \'puts "Hi #{gets}"\''
    fail 'Rubybop failed to read from STDIN' if ! ok

    ok, res = sh './rubybop --disable-gems ./bootstraptest/runner.rb'
    fail "Ruby tests failed with exit code = #{res.exitstatus}" if ! ok
  end

  puts "All ruby tests passed"
end
task :ruby_test => :ruby do
  Rake::Task[:ruby_test_run].invoke
end

task :bop_test => :bop do
  sh 'make -C ./bop/ clean'
  test_dir.each do |dir|
		cd 'tests/' + dir do
			sh 'rake; rake run' do |ok, res|
        if ! ok then
          fail "bop tests failed status: #{res.exitstatus}"
        end
	  	end
    end
  end
  puts "Finished running all tests"
end

task :test do
  Rake::Task[:bop_test].invoke
  Rake::Task[:ruby_test].invoke
end

task :nuke do
	sh 'git clean -xfd'
end
task :clean do
	cd "ruby" do
		if(File.exists?("Makefile")) then
			sh 'make clean'
		end
	end
  cd "bop" do
    sh 'make clean'
  end
  test_dir.each do |dir|
    cd "tests/" + dir do
      sh 'rake clean'
    end
  end
end
task :again do
	Rake::Task[:clean].invoke
	Rake::Task[:default].invoke
end
task :install => :ruby do
  cd "ruby" do
    sh 'make install' do |ok, res| end
  end
end
task :uninstall do
  sh 'make -C ruby uninstall'
end
task :debug do
  Rake::Task[:bop_debug].invoke
  Rake::Task[:ruby].invoke
end
