task :default => :ruby

task :ruby => :bop do
  #build ruby
  cd "ruby" do
    if (!File.exists?("Makefile")) then
      sh 'autoconf'
      sh './configure'
    end
    sh 'make'
  end
end

task :bop do
  #build bop
  cd "bop" do
    sh 'make'
  end
end

task :test => :default do
  cd "ruby" do
		sh 'make test' do |ok, res|
			if ! ok then
				fail "tests failed (status = #{res.exitstatus}"
			end
		end
	end
end

task :nuke do
	sh 'git clean -xfd'
end
task :clean do
	cd "ruby" do
		if(File.exists?("Makefile")) then
			sh 'make clean'
		end
	end
  cd "bop" do
    sh 'make clean'
  end
end
task :again do
	Rake::Task[:clean].invoke
	Rake::Task[:default].invoke
end
